{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "data": { "url": "penglings.csv" },

  "width": 700,
  "height": 420,

  "mark": { "type": "circle", "opacity": 0.8 },

  "encoding": {
    "x": {
      "field": "flipper_length_mm",
      "type": "quantitative",
      "title": "Flipper Length (mm)",
      "scale": { "zero": false },
      "axis": { "tickCount": 7, "grid": true }
    },
    "y": {
      "field": "body_mass_g",
      "type": "quantitative",
      "title": "Body Mass (g)",
      "scale": { "zero": false },
      "axis": { "tickCount": 7, "grid": true }
    },

    "color": {
      "field": "species",
      "type": "nominal",
      "legend": { "title": "species" },
      "scale": {
        "domain": ["Adelie", "Chinstrap", "Gentoo"],
        "range": ["#F28E2B", "#7B3C9B", "#1B9E77"]
      }
    },

    "size": {
      "field": "bill_length_mm",
      "type": "quantitative",
      "legend": {
        "title": "bill_length_mm",
        "values": [40, 50]
      },
      "scale": {
        "range": [12, 201]
      }
    },

    "tooltip": [
      { "field": "species", "type": "nominal" },
      { "field": "flipper_length_mm", "type": "quantitative" },
      { "field": "body_mass_g", "type": "quantitative" },
      { "field": "bill_length_mm", "type": "quantitative" }
    ]
  },

  "config": {
    "font": "Comic Sans MS",
    "view": { "stroke": null },
    "axis": {
      "labelFont": "Comic Sans MS",
      "titleFont": "Comic Sans MS",
      "labelFontSize": 12,
      "titleFontSize": 13,
      "gridOpacity": 0.2,
      "tickSize": 6
    },
    "legend": {
      "labelFont": "Comic Sans MS",
      "titleFont": "Comic Sans MS",
      "labelFontSize": 12,
      "titleFontSize": 12
    }
  }
}
